<html lang="en">
  {{> header}}
<body>
<div class="container">
      <div class="jumbotron mt-5">
          <section>
          <h1><b>X-MEMES</b></h1>
          </section>
          <hr>
      </div>
      <div class="jumbotron">
        <form action="/" method="POST" autocomplete="off">        
  <div class="row mb-3">
    <label for="name" class="col-sm-2 col-form-label"> Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="name" id="name"  placeholder="Enter Name" required>
    </div>
  </div>
   
      <div class="row mb-3">
        <label for="url" class="col-sm-2 col-form-label"> URL</label>
        <div class="col-sm-10">
         <input type="url" class="form-control" name="url" id="url" placeholder="Enter url" required>
        </div>
   
       <div class="row mb-3">
        <label for="caption" class="col-sm-2 col-form-label"> Caption</label>
        <div class="col-sm-10">
           <input type="text" class="form-control" name="caption" id="caption" placeholder="Enter caption" required>
        
      </div>
   </div>

  </div>
        <br>
           <div class="row">
               <div class="d-grid gap-2 col-6 mx-auto">
                   <button type="submit" class="btn btn-primary btn-block ">Submit</button>
               </div>
           </div>
        </form>
    </div>
        <form>
   

    <div class="card mb-3">
      {{#each memes}}
        <img src="{{url}}" class="card-img-top" alt="...">
        <hr>
        <div class="card-body">
          <h5 class="card-title">{{name}}</h5>
          <hr>
          <p class="card-text">{{caption}}</p>
          <hr>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-3 mr-3">
          <a href="/edit/{{_id}}" class="btn btn-secondary me-md-2"><i class="far fa-edit fa-lg float-right"></i></a>
          <a href="/delete/{{_id}}" class="btn btn-secondary ml-2"><i class="far fa-trash-alt fa-lg text-danger float-right" ></i></a>
        </div>
      {{else}}
          <p>There is nothing to display</p>
        {{/each}}
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" 
integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>
</html>
